# Layout options: bsp, stack or float.
yabai -m config layout bsp

# New windows will automatically go to the right if veritcally split and the 
# bottom if horizontally split.
yabai -m config window_placement second_child

# padding
yabai -m config top_padding 1
yabai -m config bottom_padding 1
yabai -m config right_padding 1
yabai -m config left_padding 1

# mouse settings
yabai -m config mouse_follows_focus on # mouse will move to focused window
yabai -m config mouse_action1 move # alt key + left click drag moves window
yabai -m config mouse_action2 resize # alt key + right click drag resizes window
yabai -m config mouse_drop_action swap # swap window dragged to center of other window

# Disable specific apps
# yabai -m rule --add app="^Calculator$" manage=off

